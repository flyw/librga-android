<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RGA JNI Test"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Results:"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            android:contentDescription="Original Image" />

        <ImageView
            android:id="@+id/ivProcessed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            android:contentDescription="Processed Image" />

        <Button
            android:id="@+id/btnRunAllTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run All Tests"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Copy"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestResize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Resize"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestRescale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Rescale"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Crop"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestRotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Rotate"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestFlip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Flip"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Translate"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestBlend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Blend"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestConvertColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Color Conversion"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestYuvToBitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test YUV to Bitmap"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test RGA Job (Multi-task)"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Individual Task Tests:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestCopyTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Copy Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestResizeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Resize Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestCropTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Crop Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestRotateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Rotate Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestFlipTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Flip Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestTranslateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Translate Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestBlendTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Blend Task"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTestConvertColorTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Color Conversion Task"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
